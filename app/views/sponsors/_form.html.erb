
<h1>申請贊助</h1>
<%= form_for(Task.new) do |f| %>
  
  <div class="field">
    <%= f.label :phone , "聯絡電話"   %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :club , "社團名稱"%><br>
    <%= f.text_field :club %>
  </div>
  <div class="field">
    <%= f.label :club_number, "社團成員數量" %><br>
    <%= f.number_field :club_number %>
  </div>
  <div class="field">
    <%= f.label :university, "大學名稱" %><br>
    <%= f.text_field :university %>
  </div>
<div class="field">
    <%= f.label :mailnumber, "信箱數量" %><br>
    <%= f.number_field :mailnumber %>
  </div>
<div class="field">
    <%= f.label :fanpagelink, "粉絲團或官網連結" %><br>
    <%= f.text_field :fanpagelink %>
  </div>

<div class="field">
    <%= f.label :fanpagenumber, "粉絲團粉絲數量" %><br>
    <%= f.number_field :fanpagenumber %>
  </div>
  <div class="field">
    <%= f.label :finishsponsordate, "何時可以完成贊助" %><br>
    <%= f.text_field :finishsponsordate %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>